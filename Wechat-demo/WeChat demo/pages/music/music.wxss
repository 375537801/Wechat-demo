
.userinfo {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-nickname {
  color: gray;
}
.bg {
  width: 500rpx;
  height: 100px;
}
.img{
  width:100%;
  height: 100%;
}
.music{
  margin: 30px 0 0 0;
  width:100%;
  height: 100%;
  text-align: center;
  display: flex;
  color: black;
}
.list{
  flex-direction: column;
  flex: 2;
  font-size: 20px;
}
.lovemusic,
.staticmusic,
.intermusic {
  width: 100%;
  height: 30px;
  line-height: 33px;
  border-bottom: 1px dashed black;  
  border-radius: 15px;
  background-image: url(../../image/1850.jpg);
}

.music-name{
  flex: 5;
  width: 100%;
  height: 100%;
  border-left: 1px dashed #210A98;
  border-top: 1px dashed #DC502F;
  background-image: url(../../image/kong.jpg);
  overflow-y: hidden;
  opacity: 0;
  color: #8FBC8F;
}
.music-two{
  display: none;
  flex: 5;
  width: 100%;
  height: 100%;
  border-left: 1px dashed #210A98;
  border-top: 1px dashed #DC502F;
  background-image: url(../../image/kong.jpg);
  overflow-y: hidden;
  opacity: 0;
}
.hid {
  overflow: hidden;
}
.list-one {
  height: 10%;
  text-align:left;
  line-height:33px;
  border-bottom: 1px dashed #6BA0D1;
  font-size: 15px;
  font-family: Microsoft YaHei;
}
.list-two {
  display: none;
  height: 10%;
  text-align:left;
  line-height:33px;
  border-bottom: 1px dashed #6BA0D1;
  font-size: 15px;
  font-family: Microsoft YaHei;
}
.footimg{
  width: 100%;
  height: 20px;
  margin-top: 10px;
}
